<div>
  <div>
    <p>
      <span class="lead"><%= link_to bookmark.title, bookmark.url, target: "_blank" %></span>
      <% if current_page?(bookmarks_path) %>
        <%= link_to bookmark.domain.name,  bookmark.domain %>
      <% end %>
    </p>
  </div>
  <div>
    <div>
      <ul>
        <!--% bookmark.tags.each do |tag| %-->
          <!--li-->
            <!--%= link_to bookmark.tag.name,  bookmark.tag %-->
          <!--/li-->
        <!--% end %-->
      </ul>
    </div>
    <div>
      <!-- COPY URL IS GONNA BE A METHOD -->
      <form class="form-inline" role="form">
        <div class="col-xs-3 col-sm-3">
          <div class="input-group">
            <input type="text" class="form-control input-sm">
            <span class="input-group-btn">
              <%= link_to 'copy', '#', class: "btn btn-primary btn-sm" %>
            </span>
          </div>
        </div>
        <%= link_to 'edit', edit_bookmark_path(bookmark), class: "btn btn-primary btn-sm" %>
        <%= link_to 'delete', bookmark, class: "btn btn-primary btn-sm", 
        method: :delete, 
        data: { confirm: 'Are you sure?' } %>
      </form>
    </div>
  </div>
</div>
