<div class="bookmark row">
  <div class="title_domain">
    <p>
      <span class="lead">
        <%= link_to bookmark.title, bookmark.url, target: "_blank" %>
      </span>
      <% unless current_page?(controller: 'domains', action: 'show') %>
        <%= link_to bookmark.domain.name, bookmark.domain, class: "domain" %>
      <% end %>
    </p>
  </div>
  <div>
      <%= form_for(bookmark) do |f| %>
        <div class="col-xs-3">
          <div class="input-group">
            <%= f.text_field :short_url, class: "form-control input-sm" %>
            <span class="input-group-btn">
              <%= link_to 'copy me!', '#copyLink', class: "btn btn-primary btn-sm copy" %>
            </span>
          </div>
        </div>
        <%= link_to 'edit', edit_bookmark_path(bookmark), class: "btn btn-primary btn-sm edit" %>
        <%= link_to 'delete', bookmark, class: "btn btn-primary btn-sm", 
        method: :delete, 
        data: { confirm: 'Are you sure?' } %>
      <% end %> 
  </div>
  <div>
    <ul class="tags">
      <% bookmark.tags.each do |tag| %>
        <li>
          <%= link_to tag.name, tag, class: "btn btn-info btn-xs" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
