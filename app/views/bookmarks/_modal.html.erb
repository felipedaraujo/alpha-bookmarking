<div class="modal fade" id="addLink" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(:bookmark, url: bookmarks_path) do |f| %>
        <div class="modal-body">
            <%= f.label :url %>
            <%= f.text_field :url %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
          </button>
          <button type="button" class="btn btn-primary">Add Link</button>
          <%= link_to "Cancel", "#cancel", class: "btn btn-default", 
                                 data: { dismiss: "modal" } %>
          <%= f.submit "Add link", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
